[flake8]
# Maximum line length
max-line-length = 100

# Directories to exclude from linting
exclude =
    .git,
    __pycache__,
    */migrations/*,
    venv,
    env,
    .venv,
    .pytest_cache,
    .coverage,
    htmlcov,
    dist,
    build,
    *.egg-info

# Error codes to ignore
# E203: Whitespace before ':' (conflicts with Black)
# W503: Line break before binary operator (conflicts with Black)
# E501: Line too long (handled by Black)
ignore = E203, W503, E501

# Maximum complexity
max-complexity = 10

# Show source code for each error
show-source = True

# Show pep8 code for each error
show-pep8 = True

# Count errors
count = True

# Display statistics
statistics = True
